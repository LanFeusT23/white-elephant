rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if true;
    }

    match /events/{eventId}{
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth.uid == request.resource.data.createdBy;

      match /users/{userId}{
        allow read: if request.auth != null;
        allow create: if request.auth.uid == userId &&
                        eventHasStarted() == false;
        allow update: if request.auth.uid == userId &&
                        eventHasStarted() == false;
      }

      match /gifts/{giftId}{
        allow read: if request.auth != null && 
      }

      function getEvent(){
        return get(/databases/$(database)/documents/events/$(eventId)).data;
      }

      function eventHasStarted(){
        return getEvent().started == true;
      }

    }

    //ANYONE CAN CREATE EVENT
    //OWNERS CAN UPDATE EVENTS

    //ANYONE CAN CREATE A USER
    //OWNERS CAN UPDATE A USER


    //ANYONE CAN CREATE GIFT
    //OWNERS CAN UPDATE GIFTS
    
    //NEXT PLAYER (TRACKED ON EVENT) CAN UPDATE 'selectedBy' field
  }
}